<div class="container">
    <%# for (var j=0; j<eventData.length/2; j++) { %>
        <!-- div class="row" -->
            <% for (var i=0; i<eventData.length; i++) { %>
                <div class="col-sm-10">
                    <div class="card">
                        <div class="card-header">
                            <%=eventData[i].sortname%>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"><%=eventData[i].longname%></h5>
                            <h6 class="card-subtitle mb-2 text-muted">Fecha y hora: <%=eventData[i].date%> <%=eventData[i].time%></h6>
                            <p class="card-text"><%=eventData[i].description%></p>
                            <a href="" class="btn btn-light">Precio: <%=eventData[i].price%></a>
                            <a href="/events/view/<%=eventData[i]._id%>" class="btn btn-info">MÃ¡s detalles</a>
                            <% if (eventData[i].remaining > 0) { %>
                                <a href="/tickets/purchase/<%=eventData[i]._id%>" class="btn btn-primary">Comprar boletos</a>
                            <% } %>
                        </div>
                    </div>
                </div>
                <br/>
            <% } %>
        <!-- /div -->
    <%# } %>
</div>

